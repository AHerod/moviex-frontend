div(class='pb-4 container')
  div(v-for='(filter, label, filtersIndex) in filters')
    div(class='py-2 flex items-center justify-between')
      h2(class='text-left') {{label}}
      div(class='text-center')
        v-chip(
          class='m-1 text-red-400 border'
          v-for='(tag,index) in filter'
          :key='index'
          @click='selected(tag.id,label)'
          pill
          light
          link
          color='secondary'
          :outlined='selectedFilters[label] && !selectedFilters[label].includes(tag.id)'
        )
          | {{ tag.label || tag.genre }}
      v-btn(icon color='secondary' light)
        v-icon(light) mdi-magnify
    v-divider
