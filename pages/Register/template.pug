section(class='py-24')
  div(class='container mx-auto')
    div(class='flex justify-center')
      div(class='md:w-1/2 w-full flex flex-col items-center mx-auto bg-gray-200 p-8')
        h3(class='text-3xl mb-8') Register
        notification(v-if='success' type='success' :message='success')
        notification(v-if='error' type='error' :message='error')
        form(@submit.prevent='register' v-if='!success' method='post' class='bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4')
          div(class='mb-4')
            label(for='username' class='block text-gray-700 text-sm font-bold mb-2') Username
            input(id='username' v-model='form.username' class='focus:outline-none focus:shadow-outline shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight' type='text' placeholder='Username')
          div(class='mb-4')
            label(for='email' class='block text-gray-700 text-sm font-bold mb-2') Email
            input(id='email' v-model='form.email' class='focus:outline-none focus:shadow-outline shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight' type='email' placeholder='Email')
          div(class='mb-6')
            label(for='password' class='block text-gray-700 text-sm font-bold mb-2') Password
            input(v-model='form.password' id='password' class='focus:outline-none focus:shadow-outline shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight' type='password' placeholder='Password' )
          div(class='flex items-center justify-between')
            button(class='hover:bg-blue-700 focus:outline-none focus:shadow-outline text-yellow-500 font-bold py-2 px-4.rounded' type='submit') Register
          div
            p(class='text-sm') Already got an account?
            a(class='inline-block align-baseline font-bold text-sm text-gray-500 hover:text-black' href='/login') Login
